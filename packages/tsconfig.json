{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "..",
    "paths": {
      "@flakiness-detective/core": ["./core/src/index.ts"],
      "@flakiness-detective/adapters": ["./adapters/src/index.ts"],
      "@flakiness-detective/visualization": ["./visualization/src/index.ts"],
      "@flakiness-detective/demo": ["./demo/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist"]
}