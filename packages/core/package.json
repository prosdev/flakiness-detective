{
  "name": "@flakiness-detective/core",
  "version": "0.2.0",
  "description": "Core algorithms and interfaces for flakiness detection",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --declaration",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "author": "Your Name",
  "repository": {
    "type": "git",
    "url": "https://github.com/prosdev/flakiness-detective.git",
    "directory": "packages/core"
  },
  "keywords": [
    "testing",
    "flakiness",
    "detection",
    "ai",
    "test-automation"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "dependencies": {
    "density-clustering": "^1.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/density-clustering": "^1.3.3",
    "@types/node": "^20.10.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}