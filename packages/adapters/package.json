{
  "name": "@flakiness-detective/adapters",
  "version": "0.1.0",
  "description": "Data source adapters for flakiness detection",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*"
      ]
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "clean": "rimraf dist"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@flakiness-detective/core": "workspace:*"
  },
  "peerDependencies": {
    "@google/generative-ai": "^0.1.0",
    "firebase-admin": "^11.0.0"
  },
  "peerDependenciesMeta": {
    "firebase-admin": {
      "optional": true
    },
    "@google/generative-ai": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/node": "^20.10.5",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}