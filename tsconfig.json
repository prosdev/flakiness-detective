{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@flakiness-detective/core": ["./packages/core/src/index.ts"],
      "@flakiness-detective/adapters": ["./packages/adapters/src/index.ts"],
      "@flakiness-detective/visualization": ["./packages/visualization/src/index.ts"],
      "@flakiness-detective/demo": ["./packages/demo/src/index.ts"]
    }
  },
  "files": [],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/adapters" },
    { "path": "./packages/visualization" },
    { "path": "./packages/demo" },
    { "path": "./packages/meta" }
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}