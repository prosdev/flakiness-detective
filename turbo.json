{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "//@flakiness-detective/adapters#build": {
      "dependsOn": ["@flakiness-detective/core#build"]
    },
    "//@flakiness-detective/meta#build": {
      "dependsOn": ["@flakiness-detective/core#build", "@flakiness-detective/adapters#build"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "test:watch": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"],
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"],
      "outputs": []
    },
    "//@flakiness-detective/adapters#typecheck": {
      "dependsOn": ["@flakiness-detective/core#build"]
    },
    "//@flakiness-detective/meta#typecheck": {
      "dependsOn": ["@flakiness-detective/core#build", "@flakiness-detective/adapters#build"]
    },
    "lint": {},
    "format": {},
    "clean": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}