{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@flakiness-detective/core": ["./packages/core/src"],
      "@flakiness-detective/adapters": ["./packages/adapters/src"],
      "@flakiness-detective/visualization": ["./packages/visualization/src"],
      "@flakiness-detective/demo": ["./packages/demo/src"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}