{
  "name": "flakiness-detective-workspace",
  "version": "0.1.2",
  "description": "AI-powered test flakiness detection and analysis tool (Workspace Root)",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "test": "vitest run",
    "test:packages": "npm-run-all --sequential test:*:run",
    "test:core:run": "cd packages/core && pnpm test",
    "test:adapters:run": "cd packages/adapters && vitest run 'firestore|google-genai|embedding|integration'",
    "test:watch": "vitest",
    "test:specific": "vitest run --testNamePattern",
    "test:coverage": "vitest run --coverage",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "publish": "changeset publish"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@changesets/cli": "^2.29.7",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@8.10.0",
  "main": "packages/adapters/dist/index.js",
  "types": "packages/adapters/dist/index.d.ts",
  "files": [
    "packages/*/dist",
    "README.md",
    "CONTRIBUTING.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./packages/adapters/dist/index.d.ts",
      "import": "./packages/adapters/dist/index.js",
      "require": "./packages/adapters/dist/index.js"
    },
    "./core": {
      "types": "./packages/core/dist/index.d.ts",
      "import": "./packages/core/dist/index.js",
      "require": "./packages/core/dist/index.js"
    },
    "./adapters": {
      "types": "./packages/adapters/dist/index.d.ts",
      "import": "./packages/adapters/dist/index.js",
      "require": "./packages/adapters/dist/index.js"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
