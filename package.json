{
  "name": "flakiness-detective",
  "version": "0.1.0",
  "description": "AI-powered test flakiness detection and analysis tool",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "test": "vitest run",
    "test:packages": "npm-run-all --sequential test:*:run",
    "test:core:run": "cd packages/core && pnpm test",
    "test:adapters:run": "cd packages/adapters && vitest run 'firestore|google-genai|embedding|integration'",
    "test:watch": "vitest",
    "test:specific": "vitest run --testNamePattern",
    "test:coverage": "vitest run --coverage",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "clean": "turbo run clean",
    "dev": "turbo run dev"
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@vitest/coverage-v8": "^3.2.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@8.10.0"
}